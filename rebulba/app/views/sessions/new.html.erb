<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <%= auth_token %>
  <label>
    Email
    <input type="text" name="user[email]" value="">
  </label>
  <br>

  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>
  <br>
  <input type="submit" value="Sign In">
</form>