<% @user.posts.each do |post| %>

<li class=".post-options">

  <%= link_to post.title, user_post_url(current_user.id, post.id), method: :get%>

  <%= post.body %>

  <% if params["id"].to_i == current_user.id %>

    <%= render partial: "layouts/post/deletepost", locals: {post: post} %>

    <%= render partial: "layouts/post/editpost", locals: {post: post} %>

  <% end %>

  <%= render partial: "layouts/comment/postcomments", locals: {post: post} %>

<li>

<% end %>

