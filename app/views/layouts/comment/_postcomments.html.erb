  <% post.comments.each do |comment| %>

    <%= comment.body %>

    <%= render partial: "layouts/comment/edit", locals: {post: post, comment: comment} %>

    <%= render partial: "layouts/comment/delete", locals: {comment: comment} %>

  <form action="<%= comment_url(comment.id) %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <%= auth_token %>
    <input type="submit" value="delete">
  </form>

  <% end %>

  <form action="<%= user_post_comments_url(post.user_id, post.id) %>" method="post">
    <%= auth_token %>
    <label for="comment-body" name>Comment</label>
    <input type="textarea" id="comment-body" name=comment[body] value="">

    <input type="submit" value="Add">
  </form>
