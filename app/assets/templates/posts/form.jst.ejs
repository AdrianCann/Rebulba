<div class="post-form group">
	<form id="update-post-form">
	    <div class="post-form-input">
	      <label for="post-title">Post Title </label>
	      <input type="text" id="post-title" name="post[title]" value="<%= post.escape("title") %>">


	      <label for="post-body">Post Body</label>
	      <textarea id="post-body" name="post[body]"><%= post.escape("body") %></textarea>
	    </div>
    
	    <div class="submit">
	      <input type="submit" value="Update Post">
	    </div>
	</form>
</div>