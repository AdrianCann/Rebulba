<div class="post-form group">
	<form id="new-post-form">
	<h3>New Post</h3>
	
	<div class="post-form-input">
	  <label for="post-title">Post Title </label>
	  <input type="text" id="post-title" name="post[title]" value="">


	  <label for="post-body">Post Body</label>
	  <textarea id="post-body" name="post[body]"></textarea>
	</div>

	<div class="submit">
	  <input id="new-post-button" type="submit" value="Submit Post">
	</div>
	
	</form>
</div>

<section class="posts group">
  <% posts.each(function(post){ %>
  
  	<article class="post">
	    <div class="post-thumb">
			<a href="#">
				<img src="http://s3.amazonaws.com/rebulba_dev/users/avatars/000/000/007/original/puppy.jpg?1398551275" width="54" height="54" alt="">
			</a>
	    </div>
		
		<div class="post-content" data-id="<%= post.id %>">
			<header class="post-header group">
				<h4><a href="#">Demo User</a></h4>
				<h3><a href="#"><%= post.escape("title")%></a></h3>
			
		      	<div class="post-header-info">  
		       	 <time><%= post.escape("updated_at") %></time>
		      	</div>
		    </header>
		     <p class="post-body"><%= post.escape("body") %></p>
				 <nav class="post-bottom-nav">
					 <button class="post-option-toggle" data-id="<%= post.id %>">option</button>
					 <a class="likes" href="#"><%= post.get("likes_count") + " likes" %></a>
			 
				</nav>

		</div>
		
	    <div class="post-options">
	  	  <div class="show-post-options">
		  
		  	<nav class="post-option-nav">
				<button class="delete-post" data-id="<%= post.id %>">Delete</button>
	  			<button class="edit-post" data-id="<%= post.id %>">Edit</button>
	  			<button class="like-post" data-id="<%= post.id %>">Like</button>
			</nav>
	  	</div>
	    </div>
		
		<div class="comment">
			<div class="comment-wrap">
				<article>
				<p></p>
				</article>
			</div>
		
		</div>
	
	
	</article>
	
	<% }); %>
  
</section>

<div class="modal-screen close-modal"></div>